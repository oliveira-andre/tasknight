<p id="notice"><%= notice %></p>

<h1>Character Attributes</h1>

<table>
  <thead>
    <tr>
      <th>Str</th>
      <th>Agi</th>
      <th>Vit</th>
      <th>Int</th>
      <th>Dex</th>
      <th>Luk</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @character_attributes.each do |character_attribute| %>
      <tr>
        <td><%= character_attribute.str %></td>
        <td><%= character_attribute.agi %></td>
        <td><%= character_attribute.vit %></td>
        <td><%= character_attribute.int %></td>
        <td><%= character_attribute.dex %></td>
        <td><%= character_attribute.luk %></td>
        <td><%= link_to 'Show', character_attribute %></td>
        <td><%= link_to 'Edit', edit_character_attribute_path(character_attribute) %></td>
        <td><%= link_to 'Destroy', character_attribute, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

